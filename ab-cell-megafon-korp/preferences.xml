<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
	<EditTextPreference
		title="Логин"
		key="login"
		summary="||{@s}"
		obligatory="true"
		dialogTitle="Логин"
		positiveButtonText="ОК"
		negativeButtonText="Отмена"
		dialogMessage="Введите логин, используемый для входа в личный кабинет. Необходимо указать логин с префиксом, например SZF-12345678">
	</EditTextPreference>
	<EditTextPreference
		title="Пароль"
		key="password"
		summary="||***********"
		obligatory="true"
		dialogTitle="Пароль"
		positiveButtonText="ОК"
		negativeButtonText="Отмена"
		dialogMessage="Введите пароль, используемый для входа в личный кабинет."
		inputType="textPassword">
	</EditTextPreference>
	<ListPreference
		key="region"
		title="Область"
		dialogTitle="Выберите область"
		summary="||{@s}"
		entries="Санкт-Петербург и область|Архангельская|Вологодская|Калининградская|Курганская|Мурманская|Новгородская|Псковская|Республика Карелия|Республика Коми|Свердловская|Тюменская|Челябинская"
		entryValues="szf|szf|szf|szf|ural|szf|szf|szf|szf|ural|ural|ural|ural"
		defaultValue="ural">
	</ListPreference>
</PreferenceScreen>