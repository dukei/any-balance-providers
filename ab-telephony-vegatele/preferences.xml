<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <ListPreference
		obligatory="true"
        key="login_method" 
        title="Войти посредством"
        summary="||{@s}"
        entries="Номер лицевого счета|Логин|E-mail"
        entryValues="number_ls|login|email"
	defaultValue="number_ls">
    </ListPreference>
    <EditTextPreference
		obligatory="true"
        title="Логин" 
        positiveButtonText="ОК" 
        summary="||{@s}" 
        dialogTitle="Логин" 
        negativeButtonText="Отмена" 
        dialogMessage="Введите ваш логин, е-мейл или номер лицевого счета, в зависимости от настройки &quot;Войти посредством&quot;"
        inputType="textEmailAddress"
        key="login">
    </EditTextPreference>
    <EditTextPreference
		obligatory="true"
        positiveButtonText="ОК"
        key="password" 
        dialogTitle="Пароль"
        negativeButtonText="Отмена"
        title="Пароль"
        summary="||************"
        dialogMessage="Введите ваш пароль в личный кабинет Vega"
        inputType="textPassword">
    </EditTextPreference>
</PreferenceScreen>