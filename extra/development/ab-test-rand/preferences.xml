<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
	<EditTextPreference
		title="Логин"
		key="login"
		summary="||{@s}"
		obligatory="true"
		dialogTitle="Логин"
		positiveButtonText="ОК"
		negativeButtonText="Отмена"
		dialogMessage="Введите логин, используемый для входа в личный кабинет.">
	</EditTextPreference>
	<CheckBoxPreference
		title="Возвращать null?"
		key="return_null"
		summary="Возвращает null у всех счетчиков">
	</CheckBoxPreference>
	<CheckBoxPreference
		title="Падать?"
		key="bad_behavior"
		summary="Падает с ошибкой">
	</CheckBoxPreference>
	<CheckBoxPreference
		title="Фатальная ошибка?"
		key="fatal_error"
		summary="Падает с фатальной ошибкой">
	</CheckBoxPreference>	
</PreferenceScreen>