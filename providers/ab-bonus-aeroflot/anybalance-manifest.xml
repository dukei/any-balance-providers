		<counter id="milesExpirationDate" name="Мили действительны до" type="time" format="dd/MM/yyyy"/>
		<counter id="segments" name="Полетные сегменты"/>
		<counter id="segmentsBusiness" name="Cегменты бизнес класса"/>
		<counter id="level" name="Уровень" type="text"/>
		<counter id="levelExpirationDate" name="Срок действия уровня" type="time" format="dd/MM/yyyy"/>
	</counters>
	<keywords>aeroflot, miles</keywords>
	<type>bonus</type>
	<country>ru, ua, by, kz, uz</country>
</provider>