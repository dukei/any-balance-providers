<?xml version="1.0" encoding="utf-8"?>
<provider>
	<id version="3">ab-bonus-kinoteatr</id>
	<api flags="no_browser"/>
	<name>Кино Бонус</name>
	<description html="true"><![CDATA[
	<p>Предоставляет информацию о балансе бонусных баллов Кино https://kinoteatr.ru</p>
	<p>В число кинотеатров, поддерживающих данную бонусную программу входят Синема парк и Формула кино</p>
	]]></description>
	<author>AnyBalance Team &lt;info@anybalance.ru&gt;</author>
	<depends>
		<module id="library"/>
	</depends>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="balance" name="Баланс" units=" Б"/>
		<counter id="percent" name="Процент скидки" units="%"/>
		<counter id="status" name="Статус" type="text"/>
		<counter id="left_for_next_status" name="Осталось до следующего статуса" units=" р"/>
		<counter id="left_for_next_status_till" name="Крайний срок следующего статуса" type="time" format="dd/MM/yyyy"/>
		<counter id="num" name="Номер карты" type="text"/>
	</counters>
	<keywords></keywords>
	<type>bonus</type>
	<country>ru</country>
</provider>