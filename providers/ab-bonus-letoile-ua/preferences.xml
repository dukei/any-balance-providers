<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
		obligatory="true"
        key="login"
        title="Логин"
        summary="||{@s}" 
        inputType="text"
        dialogTitle="Логин"
        dialogMessage="Введите email, используемый для входа на letu.ru или letu.ua"
        positiveButtonText="ОК"
        negativeButtonText="Отмена">
    </EditTextPreference>
	<EditTextPreference
		obligatory="true"
		key="password"
		title="Пароль"
		summary="Пароль для авторизации||***********\n"
		dialogTitle="Пароль"
		negativeButtonText="Отмена"
		dialogMessage="Введите пароль, используемый для авторизации"
		positiveButtonText="ОК"
		inputType="textPassword">
	</EditTextPreference>
    <ListPreference 
        key="loc"
        title="Проверять сайт"
        summary="||{@s}" 
        entries="Украина (letu.ua)|Росиия (letu.ru)"
        entryValues="UA|RU"
        defaultValue="UA">
    </ListPreference>

</PreferenceScreen>
