<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
	<ListPreference
		key="cardType"
		title="Статус карты"
		obligatory="true"
		summary="|Укажите статус карты, для авторизации по номеру карты|{@s}"
		entries="Не указан|Обычная|Серебряная|Золотая"
		positiveButtonText="ОК"
		negativeButtonText="Отмена"
		entryValues="0|1|2|3"
		defaultValue="0">
	</ListPreference>
    <EditTextPreference
		obligatory="true"
		title="E-mail или номер карты"
		positiveButtonText="ОК"
		summary="||{@s}"
		dialogTitle="E-mail или номер карты"
		negativeButtonText="Отмена"
		dialogMessage="Введите E-mail или номер карты."
		key="login">
	</EditTextPreference>
	<EditTextPreference
		positiveButtonText="ОК"
		key="password"
		dialogTitle="Пароль"
		negativeButtonText="Отмена"
		title="Пароль"
		summary="||***********"
		dialogMessage="Введите пароль, используемый для входа в личный кабинет."
		inputType="textPassword">
	</EditTextPreference>
</PreferenceScreen>