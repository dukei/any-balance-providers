<?xml version="1.0" encoding="utf-8"?>
<provider>
	<id major_version="2.0" version="20">ab-cell-avea</id>
	<api flags="no_browser"/>
	<name>AVEA</name>
	<description html="true"><![CDATA[
	<p>AVEA hattınızda bulunan Konuşma, SMS ve Internet paketlerinin kalan miktarlarını gösterir.</p>
	<p>Bu servis sağlayıcı, AVEA altyapısını kullanan BİMCell ve PTTCell hatlarıyla da uyumludur.</p>
	]]></description>
	<instruction html="true"><![CDATA[
	<p>Online İşlemler şifrenizi almak için telefonunuzda *952# yazıp arama tuşuna basın.</p>
	]]></instruction>
	<author>AnyBalance Team &lt;info@anybalance.ru&gt;</author>
	<depends>
		<module id="library"/>
	</depends>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="balance" name="Bakiye" units=" TL"/>
		<counter id="fatura" name="Güncel Fatura" units=" TL"/>
		<counter id="minutes" name="Kalan Dakika" units=" dk"/>
		<counter id="minutes_local" name="Operatör İçi kalan Dakika" units=" dk"/>
		<counter id="bonus_minutes" name="Kalan Hediye Dakika" units=" dk"/>
		<counter id="total_minutes" name="Kalan Dakika Ayrıntıları" type="text"/>
		<counter id="traf" name="Kalan İnternet" units=" Mb"/>
		<counter id="bonus_traf" name="Kalan Hediye İnternet" units=" Mb"/>
		<counter id="sms" name="Kalan SMS" units=" sms"/>
		<counter id="bonus_sms" name="Kalan Hediye SMS" units=" sms"/>
		<counter id="bonus" name="Hediye" units=" TL"/>
		<counter id="bonus_till" name="Hediye süresi" type="time" format="dd/MM/yyyy"/>
		<counter id="bill_date" name="Fatura Tarihi" type="time" format="dd/MM/yyyy"/>
	</counters>
	<keywords>avea</keywords>
	<type>cell</type>
	<country>tr</country>
</provider>