<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference 
        title="Логин" 
        positiveButtonText="ОК" 
        summary="Номер телефона||{@s}\n" 
        dialogTitle="Номер телефона" 
        negativeButtonText="Отмена" 
        dialogMessage="Введите номер вашего телефона для входа в My Vodafone"
	obligatory="true"
        key="login"
        inputType="number">
    </EditTextPreference>
    <EditTextPreference 
        positiveButtonText="ОК"
        key="password" 
        dialogTitle="PUK код"
        negativeButtonText="Отмена"
        title="PUK код"
        summary="PUK||{@s}\n"
	obligatory="true"
        dialogMessage="Введите PUK код (8 цифр). Если оставить это поле пустым первый вход будет произведен по коду из SMS от My Vodafone"
        inputType="number">
    </EditTextPreference>
	<ListPreference
		key="lang"
		title="Язык получаемых данных"
		summary="||{@s}"
		entries="Русский|Украинский|Английский"
		entryValues="ru|ua|en"
		defaultValue="ru">
	</ListPreference>	

	<CheckBoxPreference
		title="Названия пакетов SMS, минут, мегабайт"
		defaultValue="false"
		summaryOn="Показывать названия пакетов"
		summaryOff="Не показывать названия пакетов"
		key="needPref" />

	<CheckBoxPreference
		title="SMS, минут, мегабайт в пакете"
		defaultValue="false"
		summaryOn="Показывать общее количество"
		summaryOff="Не показывать общее количество"
		key="needSuf" />

	<ListPreference
		key="service"
		title="Информция об услугах в счетчике Доп.инфо"
		summary="||{@s}"
		entries="Не показывать|Только платные|Показать все подключенные"
		entryValues="0|1|2"
		defaultValue="0">
	</ListPreference>	

	<ListPreference
		key="exps"
		title="Ифнормация о расходах в счетчике Доп.инфо"
		summary="||{@s}"
		entries="Не показывать|Только платные|Показать все расходы"
		entryValues="0|1|2"
		defaultValue="0">
	</ListPreference>	
