<?xml version="1.0" encoding="utf-8"?>
<provider>
	<api flags="no_browser"/>
	<id version="7">ab-exchange-select-by</id>
	<name>Курсы валют Банков Беларуси</name>
	<description html="true"><![CDATA[
	<p>Предоставляет информацию о текущих курсах валют в банках Республики Беларусь и курс "Национального Банка".</p> 
	<p>Есть функция отображения лучших курсов.</p> 
	<p>Информация берется с сайта select.by.</p>
	]]></description>
	<author>AnyBalance Team &lt;info@anybalance.ru&gt;</author>
	<author>DimaZUA &lt;DIMAZ.KHUA@gmail.com&gt;</author>
	<depends>
		<module id="library"/>
	</depends>
	<files>
		<icon>icon.png</icon>
		<js>main.js</js>
		<preferences>preferences.xml</preferences>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="usdpok" name="USD покупка" prefix="$↓"/>
		<counter id="usdprod" name="USD продажа" prefix="$↑"/>
		<counter id="eurpok" name="EUR покупка" prefix="€↓"/>
		<counter id="eurprod" name="EUR продажа" prefix="€↑"/>
		<counter id="rurpok" name="RUR покупка" prefix="р↓"/>
		<counter id="rurprod" name="RUR продажа" prefix="р↑"/>
		<counter id="uepok" name="EUR/USD покупка" prefix="€/$↓"/>
		<counter id="ueprod" name="EUR/USD продажа" prefix="€/$↑"/>
		<counter id="bank" name="Банк" type="text"/>
<!--		<counter id="tel" name="Телефон банка" type="text"/> -->
	</counters>
	<keywords>Беларусь, курс валют, евро, доллар, НБ РБ</keywords>
	<country>by</country>
	<type>exchange</type>
</provider>