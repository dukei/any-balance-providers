<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
		obligatory="true"
        title="Гос. номер" 
        positiveButtonText="ОК" 
        summary="||{@s}" 
        dialogTitle="Введите номер Вашего автомобиля." 
        negativeButtonText="Отмена" 
        dialogMessage="Номер должен быть в формате а351со190 либо 1234ав199, буквы русские."
        key="login">
    </EditTextPreference>
    <EditTextPreference
		obligatory="true"
        title="Номер В/У"
        positiveButtonText="ОК"
        summary="||{@s}"
        dialogTitle="Введите номер водительского удостоверения."
        negativeButtonText="Отмена"
        dialogMessage="Введите номер в формате 50ХХ028333, буквы русские."
        key="license">
    </EditTextPreference>
	<EditTextPreference
		obligatory="true"
        positiveButtonText="ОК"
        key="password" 
        dialogTitle="Св-во о регистрации."
        negativeButtonText="Отмена"
        title="Св-во о регистрации."
        summary="||{@s}" 
        dialogMessage="Введите номер свидетельства о регистрации в формате 50ХХ123456.">
    </EditTextPreference>
	<ListPreference 
        key="type" 
        title="Источник данных"
        summary="||{@s}"
        entries="Автоматически|Новый сайт|Старый сайт"
        entryValues="auto|new|old"
	    defaultValue="auto">
    </ListPreference>
</PreferenceScreen>