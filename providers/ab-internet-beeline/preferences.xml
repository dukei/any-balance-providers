<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference 
		obligatory="true"
        title="Логин" 
        positiveButtonText="ОК" 
        summary="Логин в личный кабинет:||{@s}\n" 
        dialogTitle="Логин" 
        negativeButtonText="Отмена" 
        dialogMessage="Введите логин в личный кабинет."
        key="login">
    </EditTextPreference>
    <EditTextPreference 
		obligatory="true"
        positiveButtonText="ОК"
        key="password" 
        dialogTitle="Пароль"
        negativeButtonText="Отмена"
        title="Пароль"
        summary="Пароль для входа в личный кабинет||***********\n"
        dialogMessage="Введите пароль, используемый для входа в личный кабинет."
        inputType="textPassword">
    </EditTextPreference>
	<ListPreference
		key="type"
		title="Какой кабинет использовать"
		summary="||{@s}"
		entries="beeline.ru/login|cabinet.beeline.ru|cabinet.beeline.ru/myoffice/"
		entryValues="lk|cab|office"
		defaultValue="lk">
	</ListPreference>	
</PreferenceScreen>