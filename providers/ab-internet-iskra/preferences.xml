<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
	<EditTextPreference
		title="Логин"
		key="login"
		summary="||{@s}"
		obligatory="true"
		dialogTitle="Логин"
		positiveButtonText="ОК"
		negativeButtonText="Отмена"
		dialogMessage="Введите логин, используемый для входа в личный кабинет.">
	</EditTextPreference>
	<EditTextPreference
		title="Пароль"
		key="password"
		summary="||***********"
		obligatory="true"
		dialogTitle="Пароль"
		positiveButtonText="ОК"
		negativeButtonText="Отмена"
		dialogMessage="Введите пароль, используемый для входа в личный кабинет."
		inputType="textPassword">
	</EditTextPreference>
	<ListPreference
		key="cabinet"
		title="Какой кабинет использовать"
		summary="||{@s}"
		entries="lk.seven-sky.net|stat.seven-sky.net"
		entryValues="7sky|gorkom"
		defaultValue="7sky">
	</ListPreference>		
</PreferenceScreen>