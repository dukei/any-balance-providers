<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
	<EditTextPreference
		title="Логин"
		key="login"
		summary="||{@s}"
		obligatory="true"
		dialogTitle="Логин"
		positiveButtonText="ОК"
		negativeButtonText="Отмена"
		dialogMessage="Введите логин, используемый для входа в личный кабинет.">
	</EditTextPreference>
	<EditTextPreference
		title="Пароль"
		key="password"
		summary="||***********"
		obligatory="true"
		dialogTitle="Пароль"
		positiveButtonText="ОК"
		negativeButtonText="Отмена"
		dialogMessage="Введите пароль, используемый для входа в личный кабинет."
		inputType="textPassword">
	</EditTextPreference>
    <ListPreference 
        key="city" 
        title="Город"
        summary="|Выберите ваш город|{@s}"
        entries="Ангарск|Димитровград|Иркутск|Улан-Удэ|Усолье-Сибирское|Тайшет|Нижнеудинск|Хабаровск|Селенгинск"
        entryValues="ang|dim|irk|ude|us|tai|nud|kha|slg"
	    defaultValue="irk">
    </ListPreference>
</PreferenceScreen>