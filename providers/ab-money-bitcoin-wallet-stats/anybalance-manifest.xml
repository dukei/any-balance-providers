<?xml version="1.0" encoding="utf-8"?>
<provider>
	<id version="11">ab-money-bitcoin-wallet-stats</id>
	<api flags="no_browser"/>
	<name>Bitcoin Wallet</name>
	<description html="true"><![CDATA[
	<p>Provides information about a BTC wallet.</p>
	<p>Information is sourced from https://blockchain.info/</p>
	]]></description>
	<author>Borislip &lt;borislip@gmail.com&gt;</author>
	<depends>
		<module id="library"/>
		<module id="currency"/>
	</depends>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>btcutil.js</js>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="balance" name="Balance" prefix="Ƀ"/>
        <counter id="exchange_rate" name="Exchange Rate" prefix="{@currency}"/>
        <counter id="value" name="Value" prefix="{@currency}"/>
		<counter id="total_received" name="Total Received" prefix="Ƀ"/>
		<counter id="n_transactions" name="Transactions Count"/>
        <counter id="currency" name="Currency" type="text"/>
		<counter id="balance_mbtc" name="Balance (mBTC)" prefix="mɃ"/>
		<counter id="total_received_mbtc" name="Total Received (mBTC)" prefix="mɃ"/>
	</counters>
	<keywords>bitcoin,BTC,биткоин</keywords>
	<type>money, wallet</type>
	<country></country>
</provider>