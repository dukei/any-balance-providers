<?xml version="1.0" encoding="utf-8"?>
<provider>
	<id version="4">ab-money-bitcoin-wallet-stats</id>
	<api flags="no_browser"/>
	<name>Bitcoin Wallet</name>
	<description html="true"><![CDATA[
	<p>Provides information about a BTC wallet.</p>
	<p>Information is sourced from https://blockchain.info/</p>
	]]></description>
	<author>Borislip &lt;borislip@gmail.com&gt;</author>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>library.js</js>
		<js>btcutil.js</js>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="balance" name="Balance" units="BTC"/>
        <counter id="exchange_rate" name="Exchange Rate" units="{@currency}"/>
        <counter id="value" name="Value" units="{@currency}"/>
		<counter id="total_received" name="Total Received" units="BTC"/>
		<counter id="n_transactions" name="Transactions Count"/>
        <counter id="currency" name="Currency" type="text"/>
	</counters>
	<keywords>bitcoin,BTC,биткоин</keywords>
	<type>money</type>
	<country></country>
</provider>