<?xml version="1.0" encoding="utf-8"?>
<provider>
	<id version="8">ab-money-kaspi-kz</id>
	<api flags="no_browser"/>
	<name>Kaspi bank</name>
	<description html="true"><![CDATA[
	<p>Предоставляет информацию о балансе на картах Kaspi bank в Казахстане</p>
	<p>Информация берется из личного кабинета https://www.kaspi.kz/Default.aspx?action=standing</p>
	]]></description>
	<author>Stark &lt;support@starksoft.ru&gt;</author>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>library.js</js>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="balance" name="Остаток" units=" {@currency}"/>
		<!-- <counter id="currency" name="Валюта" type="text"/> -->
		<counter id="card_num" name="Номер карты" type="text"/>
		<counter id="validto" name="Срок действия карты" type="time" format="dd/MM/yyyy"/>
		<counter id="cred_balance" name="Кредитные средства" units=" {@currency}"/>
		<counter id="card_debt" name="Задолженность по карте" units=" {@currency}"/>
		<counter id="main_debt" name="Основной долг" units=" {@currency}"/>
		<counter id="pcts" name="Проценты к оплате" units=" {@currency}"/>
		<counter id="payment_ammount" name="Платеж по карте" units=" {@currency}"/>
		<counter id="payment_left" name="Осталось внести" units=" {@currency}"/>
		<counter id="limit" name="Кредитный лимит" units=" {@currency}"/>
		<counter id="pay_in" name="Платеж через" units=" дн"/>
	</counters>
	<keywords></keywords>
	<type>money, bank</type>
	<country>kz</country>
</provider>