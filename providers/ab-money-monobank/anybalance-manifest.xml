<?xml version="1.0" encoding="utf-8"?>
<provider>
	<id version="4">ab-money-monobank</id>
	<name>Monobank(Украина)</name>
	<description html="true"><![CDATA[
	<p>Предоставляет информацию об остатках на карте <a href="https://api.monobank.ua/">монобанка</a></p>
	]]></description>
	<instruction html="true"><![CDATA[
	<ul>
		<li>Для получения token перейдите на сайт https://api.monobank.ua/</li>
	</ul>
	]]></instruction>
	<author>DimaZUA &lt;DIMAZ.KHUA@gmail.com&gt;</author>
	<depends>
		<module id="library"/>
	</depends>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="balance" name="Собственные средства" units=" грн."/>
		<counter id="limit" name="Кредитный лимит" units=" грн."/>
		<counter id="black" name="Черная" suffix="{@sufblack}"/>
		<counter id="white" name="Белая" suffix="{@sufwhite}"/>
		<counter id="platinum" name="Платиновая" suffix="{@sufplatinum}"/>
		<counter id="iron" name="IRON" suffix="{@sufiron}"/>
		<counter id="fop" name="Счет ФЛП" suffix="{@suffop}"/>
		<counter id="yellow" name="Детская" suffix="{@sufyellow}"/>
		<counter id="card1" name="Доп.карта1" suffix="{@sufcard1}" prefix="{@prefcard1}"/>
		<counter id="card2" name="Доп.карта2" suffix="{@sufcard2}" prefix="{@prefcard2}"/>
		<counter id="card3" name="Доп.карта3" suffix="{@sufcard3}" prefix="{@prefcard3}"/>
		<counter id="fio" name="ФИО" type="text"/>
		<counter id="html" name="Выписка" type="html"/>
	</counters>
	<keywords>монобанк,monobank, банк, украина</keywords>
	<type>money, bank</type>
	<country>ua</country>
</provider>
