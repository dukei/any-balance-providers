<?xml version="1.0" encoding="utf-8"?>
<provider>
	<id version="12">ab-money-openonline</id>
	<api flags="no_browser"/>
	<name>Банк Открытие</name>
	<description html="true"><![CDATA[
	<p>Предоставляет информацию об остатке на картах, счетах и вкладах крупного коммерческого Банка - Открытие</p>
	<p>Информация берется из личного кабинета https://online.open.ru/logon</p>
	]]></description>
	<author>AnyBalance Team &lt;info@anybalance.ru&gt;</author>
	<depends>
		<module id="nadapter"/>
		<module id="library"/>
		<module id="extract/abe-money-openonline"/>
	</depends>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="balance" name="Баланс" units=" {@currency}"/>
		<counter id="bonus" name="Бонусные баллы" units=" Б"/>
<!--		<counter id="blocked_balance" name="Заблокировано" units=" {@currency}"/> -->
		<counter id="limit" name="Кредитный лимит" units=" {@currency}"/>
<!--		<counter id="oPct" name="Просроченные проценты" units=" {@currency}"/> 
		<counter id="available" name="Доступно" units=" {@currency}"/>
		<counter id="debt" name="Задолженность" units=" {@currency}"/> -->
		<counter id="cardNumber" name="Номер карты" type="text"/>
		<counter id="accNum" name="Номер счета" type="text"/>
		<counter id="currency" name="Валюта" type="text"/>
		<counter id="status" name="Статус" type="text"/>
		<counter id="fio" name="ФИО" type="text"/>
		<counter id="till" name="Карта действительна до" type="time" format="dd/MM/yyyy"/>
		<counter id="date_start" name="Дата начала" type="time" format="dd/MM/yyyy"/>
		<counter id="cardName" name="Название карты" type="text"/>
	</counters>
	<keywords></keywords>
	<type>money, bank</type>
	<country>ru</country>
</provider>