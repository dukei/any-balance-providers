<?xml version="1.0" encoding="utf-8"?>
<provider>
	<id major_version="2.3" version="37">ab-money-qiwi</id>
	<api flags="no_browser"/>
	<name>QIWI Кошелек</name>
	<description html="true"><![CDATA[
	<p>Предоставляет информацию о балансе, номере QVC-карты, сроке действия QVC-карты, транзакции по QVC, количестве сообщений и счетов в QIWI Кошельке.</p> 
	<p>Информация берется из личного кабинета <a href="https://qiwi.com/">https://qiwi.com/</a></p>
	]]></description>
	<author>AnyBalance Team &lt;info@anybalance.ru&gt;</author>
	<depends>
		<module id="nadapter"/>
		<module id="extract/abe-money-qiwi"/>
	</depends>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="balance" name="Баланс" units=" {@currency}"/>
		<counter id="balance2" name="Баланс 2" units=" {@currency2}"/>
		<counter id="balance3" name="Баланс 3" units=" {@currency3}"/>
		<counter id="balance4" name="Баланс 4" units=" {@currency4}"/>
		<counter id="balance5" name="Баланс 5" units=" {@currency5}"/>
		
		<counter id="megafon_balance" name="Баланс Мегафон" units=" р"/>
		<counter id="megafon_can_pay" name="Доступно для платежей Мегафон" units=" р"/>
		<counter id="qvc_card" name="Номер карты QVC" type="text"/>
		<counter id="qvc_exp" name="Срок действия QVC" type="time" format="dd/MM/yyyy"/>
		<!-- <counter id="qvc_last" name="Последняя транзакция по QVC" type="text"/> -->
		<counter id="messages" name="Сообщения" units=" шт"/>
		<counter id="bills" name="Счета" units=" шт"/>
	</counters>
	<keywords>QVC, QVV, кошелек, деньги, киви, оплата, платежи, карта, банковская карта, visa, виза</keywords>
	<type>money, wallet</type>
	<country>ru, ua, kz</country>
</provider>