<?xml version="1.0" encoding="utf-8"?>
<provider>
	<id version="5">ab-money-russipoteka</id>
	<api flags="no_browser"/>
    <name>Русский Ипотечный Банк</name>
    <description html="true"><![CDATA[
	<p>Получает текущий остаток и другие параметры карт Русского Ипотечного Банка http://www.russipoteka.ru/, используя интернет-банк (https://online.russipoteka.ru/).</p>
	]]></description>
	<author>AnyBalance Team &lt;info@anybalance.ru&gt;</author>
	<depends>
		<module id="library"/>
		<module id="nadapter"/>
		<module id="extract/abe-money-russipoteka"/>
	</depends>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="balance" name="Остаток" units=" {@currency}"/>
		<counter id="currency" name="Валюта" type="text"/>
		<counter id="full_num" name="Карточный счёт" type="text"/>
		<counter id="till" name="Срок действия карты" type="time" format="dd/MM/yyyy"/>
		<counter id="fio" name="ФИО" type="text"/>
		<counter id="holder" name="Держатель карты" type="text"/>
		<counter id="agreement" name="Договор" type="text"/>
	</counters>
	<keywords>риб, rib</keywords>
	<type>money, bank</type>
	<country>ru</country>
</provider>