<?xml version="1.0" encoding="utf-8"?>
<provider>
    <api flags="no_browser"/>
    <id version="1">ab-municipal-ipk</id>
    <name>Иркутская процессинговая компания</name>
    <description>
        Предоставляет сводную информацию о лицевом счете и балансе в системе "Иркутская процессинговая компания" (https://portalgkh.ru)
    </description>
    <author>Владимир Пахомчик &lt;vladimir@pahomchik.ru&gt;</author>
    <depends>
        <module id="library"/>
    </depends>
    <files>
        <icon>icon.png</icon>
        <preferences>preferences.xml</preferences>
        <js>main.js</js>
        <history>history.xml</history>
    </files>
    <counters>
        <counter id="to_pay" name="Долг/переплата" units=" р"/>
        <counter id="accrued" name="Начислено к оплате" units=" р"/>
        <counter id="paid" name="Оплачено" units=" р"/>
        <counter id="current_period" name="Текущий период" type="text"/>
        <counter id="account" name="Лицевой счет" type="text"/>
        <counter id="company" name="Управляющая компания" type="text"/>
        <counter id="owner" name="Собственник" type="text"/>
        <counter id="opened" name="Открыт" type="time" format="dd.MM.yyyy"/>
        <counter id="address" name="Адрес" type="text"/>
        <counter id="type" name="Тип собственности" type="text"/>
        <counter id="phone" name="Телефон" type="text"/>
    </counters>
    <keywords>ипк, портал жкх, portal gkh, portalgkh</keywords>
    <type>municipal</type>
    <country>ru</country>
</provider>
