<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference 
		obligatory="true"
        title="Логин" 
        positiveButtonText="ОК" 
        summary="||{@s}" 
        dialogTitle="Логин" 
        negativeButtonText="Отмена" 
        dialogMessage="Введите логин в личный кабинет."
        key="login">
    </EditTextPreference>
    <EditTextPreference 
		obligatory="true"
        positiveButtonText="ОК"
		key="password" 
        dialogTitle="Пароль"
        negativeButtonText="Отмена"
        title="Пароль"
        summary="||***********"
        dialogMessage="Введите пароль, используемый для входа в личный кабинет."
        inputType="textPassword">
    </EditTextPreference>
	<ListPreference
		key="type"
		title="Что смотреть"
		summary="||{@s}"
		entries="Крымэнерго|Киевэнерго"
		entryValues="krim|kiev"
		defaultValue="kiev">
	</ListPreference>	
</PreferenceScreen>