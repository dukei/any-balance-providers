<?xml version="1.0" encoding="utf-8"?>
<provider>
	<id version="7">ab-service-kasperskiy</id>
	<api flags="no_browser"/>
	<name>My Kaspersky</name>
	<description html="true"><![CDATA[
	<p>Предоставляет информацию о действующих подписках для пользователей продуктов Лаборатории Касперского (https://www.kaspersky.ru/).</p>
	<p>Информация берется из личного кабинета My Kaspersky на сайте https://my.kaspersky.com/.</p>
	]]></description>
	<instruction html="true"><![CDATA[
	<p>Для работы провайдера требуется ввести логин и пароль для входа в личный кабинет My Kaspersky.</p>
	]]></instruction>
	<author>AnyBalance Team &lt;info@anybalance.ru&gt;</author>
	<depends>
		<module id="library"/>
		<module id="misc/saved-data"/>
	</depends>
	<files>
		<icon>icon.png</icon>
		<preferences>preferences.xml</preferences>
		<js>main.js</js>
		<history>history.xml</history>
	</files>
	<counters>
		<counter id="products" name="Подписка" type="text"/>
		<counter id="devices" name="Количество устройств" units=" шт"/>
		<counter id="active_date" name="Дата активации подписки" type="time" format="dd.MM.yyyy"/>
		<counter id="expires_date" name="Дата окончания подписки" type="time" format="dd.MM.yyyy"/>
		<counter id="product_term" name="Срок действия подписки" units=" дн"/>
		<counter id="expires_days" name="Осталось до деактивации" units=" дн"/>
		<counter id="product_desc" name="Описание подписки" type="text"/>
		<counter id="status" name="Состояние подписки" type="text"/>
		<counter id="activation_code" name="Код активации" type="text"/>
		<counter id="slots_count" name="Доступно устройств" units=" шт"/>
		<counter id="total" name="Действующие подписки" units=" шт"/>
		<counter id="unusages" name="Неиспользуемые подписки" units=" шт"/>
		<counter id="all_devices" name="Управляемые устройства" type="html"/>
		<counter id="country" name="Регион" type="text"/>
		<counter id="email" name="E-mail" type="text"/>
		<counter id="fio" name="ФИО владельца" type="text"/>
	</counters>
	<keywords>Касперский, Kaspersky, антивирус</keywords>
	<type>service</type>
	<country>ru</country>
</provider>