<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
	<EditTextPreference
		title="Логин"
		key="login"
		summary="||{@s}"
		obligatory="true"
		dialogTitle="Логин номер телефона"
		positiveButtonText="ОК"
		inputType="number"
		negativeButtonText="Отмена"
		dialogMessage="Введите номер телефона.(без +)">
	</EditTextPreference>
	<EditTextPreference
		title="Пароль"
		key="password"
		summary="||***********"
		obligatory="true"
		dialogTitle="Пароль"
		positiveButtonText="ОК"
		negativeButtonText="Отмена"
		dialogMessage="Введите пароль, используемый для входа в личный кабинет."
		inputType="textPassword">
	</EditTextPreference>
 	<EditTextPreference
		title="№ договора"
		key="id"
		summary="||{@s}"
		dialogTitle="ID"
		positiveButtonText="ОК"
		negativeButtonText="Отмена"
		dialogMessage="В ведите без пробелов № договора для отображения счетчиков!">
	</EditTextPreference>	
</PreferenceScreen>