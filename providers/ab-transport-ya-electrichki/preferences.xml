<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
		obligatory="true"
        key="station_from"
        title="Станция отправления" 
        summary="Станция отправления||{@s}\n" 
        dialogTitle="Станция отправления" 
        negativeButtonText="Отмена" 
        dialogMessage="Введите станцию отправления, либо ID Станции отправления, если по имени станцию определить не получается. ID можно узнать из адресной строки браузера после fromId="
        positiveButtonText="ОК" 
        inputType="text">
    </EditTextPreference>
    <EditTextPreference
		obligatory="true"
        key="station_to"
        title="Станция назначения" 
        summary="Станция назначения||{@s}\n" 
        dialogTitle="Станция назначения" 
        negativeButtonText="Отмена" 
        dialogMessage="Введите станцию назначения, либо ID Станции назначения, если по имени станцию определить не получается. ID можно узнать из адресной строки браузера после toId="
        positiveButtonText="ОК" 
        inputType="text">
    </EditTextPreference>
    <CheckBoxPreference
        title="Электрички"
        defaultValue="true"
        summaryOn="Показывать электрички"
        summaryOff="Игнорировать электрички"
        key="suburbans" />
    <CheckBoxPreference
        title="Автобусы"
        defaultValue="false"
        summaryOn="Показывать автобусы"
        summaryOff="Игнорировать автобусы"
        key="buses" />
    <CheckBoxPreference
        title="Поезда"
        defaultValue="false"
        summaryOn="Искать поезда"
        summaryOff="Игнорировать поезда"
        key="trains" />
