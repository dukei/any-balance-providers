<?xml version="1.0" encoding="utf-8"?>
<provider>
    <id version="9">ab-weather-metar-taf</id>
    <name>METAR-TAF</name>
    <description>
        Запрашивает крайнюю сводку погоды (METAR)  и прогнoз (TAF) для аэродрома с сайта http://www.aviationweather.gov/dataserver/. В настройках указывается код ародрома по ИКАО. Например для Домодедово это UUDD, для Шереметьево UUEE.
    </description>
    <author>theneedtocode &lt;theneedtocode@gmail.com&gt;</author>
    <files>
        <icon>icon.png</icon>
        <preferences>preferences.xml</preferences>
        <js>main.js</js>
        <js>api:jquery.min.js</js>
        <history>history.xml</history>
    </files>
    <counters>
        <counter id="raw_text" name="Неразобранный текст METAR" prefix="" suffix="" type="text"/>
        <counter id="taf_raw_text" name="Неразобранный текст TAF" prefix="" suffix="" type="text"/>
        <counter id="station_id" name="Код станции" prefix="" suffix="" type="text"/>
        <counter id="temp" name="Температура воздуха" prefix="" suffix=" ℃" type="numeric"/>
        <counter id="dewpoint" name="Точка росы" prefix="" suffix=" ℃" type="numeric"/>
        <counter id="wind_dir" name="Направление ветра(откуда)" prefix="" suffix=" гр." type="numeric"/>
        <counter id="wind_speed" name="Скорость ветра" prefix="" suffix=" уз." type="numeric"/>
        <counter id="wind_gust" name="Порывы ветра" prefix="" suffix=" уз." type="numeric"/>
        <counter id="observation_time" name="Время наблюдения" prefix="" suffix="" type="time"/>
    </counters>
    <keywords>
        weather, metar, taf
    </keywords>
    <type>
        weather
    </type>
    <country>
        ru 
    </country>
</provider>
