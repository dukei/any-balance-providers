    <counter id="point_dew" name="Точка росы" units="°C"/>
    <counter id="atm_davl" name="Атмосферное давление" units="мм рт.ст."/>
    <counter id="otn_vl_vozd" name="Относительная влажность воздуха" units="%"/>
    <counter id="v_vetra" name="Скорость ветра" units="м/с"/>
    <counter id="p_vetra" name="Порывы ветра до" units="м/с"/>
    <counter id="napr_vetra" name="Направление ветра" type="text"/>

