<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference 
        title="Логин" 
        positiveButtonText="ОК" 
        summary="||{@s}" 
        dialogTitle="Логин" 
        negativeButtonText="Отмена" 
        dialogMessage="Введите e-mail или номер карты."
        key="login">
    </EditTextPreference>
    <EditTextPreference 
        positiveButtonText="ОК"
        key="password" 
        dialogTitle="Пароль"
        negativeButtonText="Отмена"
        title="Пароль"
        summary="||***********"
        dialogMessage="Введите пароль, используемый для входа в личный кабинет."
        inputType="textPassword">
    </EditTextPreference>
    <ListPreference 
        key="type" 
        title="Кабинет"
        summary="||{@s}\n"
        entries="club-lukoil.ru|my.licard.com|club-lukoil.by"
        entryValues="club|likard|clubby"
	defaultValue="club">
    </ListPreference>	
</PreferenceScreen>