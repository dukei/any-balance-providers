<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference 
        title="Логин" 
        positiveButtonText="ОК" 
        summary="||{@s}" 
        dialogTitle="Логин" 
        negativeButtonText="Отмена" 
        dialogMessage="Введите логин для входа в личный кабинет."
        key="login">
    </EditTextPreference>
    <EditTextPreference 
        positiveButtonText="ОК"
        key="password" 
        dialogTitle="Пароль"
        negativeButtonText="Отмена"
        title="Пароль"
        summary="||***********"
        dialogMessage="Введите пароль, используемый для входа в личный кабинет."
        inputType="textPassword">
    </EditTextPreference>
	<ListPreference
		key="type"
		title="Какой кабинет использовать"
		summary="||{@s}"
		entries="Старый (billing.dream-net.ru)|Новый (lk.iflat.ru)"
		entryValues="old|new"
		defaultValue="old">
	</ListPreference>
</PreferenceScreen>