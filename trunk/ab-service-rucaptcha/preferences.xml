<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen>
    <EditTextPreference
	obligatory="true"
        key="email"
        title="E-mail" 
        summary="E-mail||{@s}\n" 
        dialogTitle="E-mail" 
        negativeButtonText="Отмена" 
        dialogMessage="Введите ваш e-mail"
        positiveButtonText="ОК">
    </EditTextPreference>
    <EditTextPreference
	obligatory="true"
        key="password"
        title="Пароль"
        summary="Пароль для авторизации||**********\n"
        inputType="textPassword"
        dialogTitle="Пароль"
        dialogMessage="Введите пароль, используемый для авторизации"
        positiveButtonText="ОК"
        negativeButtonText="Отмена">
    </EditTextPreference>
</PreferenceScreen>
